.detailPageBgcolor {
    width: 100vw;
}


.detailPage {
    width: 93vw;
    margin: 0 auto;
}

.detailHeader {
    display: flex;
    justify-content: space-between;
    padding: 26rpx;
}

.detailHeader .detailImg {
    width: 216rpx;
    height: 300rpx;
    border-radius: 16rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.detailHeader .detailImg image {
    width: 100%;
    height: 100%;
}

.detailHeader .DetailRight {
    flex: 1;
    font-size: 24rpx;
    color: #ffffff8a;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.detailHeader .DetailRight .DetailRightTitle {
    font-size: 40rpx;
    font-weight: 700;
    color: #ffffffc5;
}

.detailHeader .DetailRight .DetailRightContent .DetailRightSubtitle {
    color: #c29e6f;
    margin-bottom: 10rpx;
}

.detailHeader .DetailRight .DetailRightContent .DetailRightDate {
    font-size: 20rpx;
    margin-top: 10rpx;
}

.detailHeader .DetailRight .DetailRightBtn {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.detailHeader .DetailRight .DetailRightBtn .DetailRightBtn1 {
    width: 195rpx;
    background-color: #ffffff50;
    line-height: 60rpx;
    border-radius: 16rpx;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
}

.detailWatch {
    position: relative;
    height: 190rpx;
    background-color: #00000030;
    border-radius: 16rpx;
    margin: 20rpx auto;
    padding: 20rpx 30rpx;
    color: #fff;
    font-size: 24rpx;
    box-sizing: border-box;
}

.detailWatch .detailText {
    display: flex;
    align-items: center;
}

.detailWatch .detailText .newLogo {
    width: 34rpx;
    height: 34rpx;
    margin-right: 6rpx;
    margin-top: 2rpx;
}

.detailWatch .detailSum {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.detailWatch .detailSum .detailCount {
    color: #ffb400;
    font-size: 42rpx;
    font-weight: 700;
}

.detailSpecial {
    width: 93vw;
    height: 70rpx;
    background-color: #00000030;
    border-radius: 10rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #ffffff4d;
    font-size: 26rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.detailSpecial .detailSpecialLeft {
    display: flex;
    align-items: center;
}

.detailSpecial .detailSpecialLeft .detailSpecialTag {
    font-size: 18rpx;
    border: 1px solid #ffffff4d;
    border-radius: 6rpx;
    margin-right: 30rpx;
    height: 22rpx;
    padding: 0 4rpx;
    margin-top: 4rpx;
    color: #ffffff4d;
}

.detailSpecial .detailSpecialLeft .detailSpecialText {

    color: #ffffff94;
}

.detailAbstract {
    position: relative;
    margin-top: 20rpx;
    color: #ffffff94;
    padding: 20rpx 23rpx;
    font-size: 28rpx;
    font-weight: 500;
}

.detailTitle {
    font-weight: 700;
    font-size: 34rpx;
    color: #fff;
}

.detailAbstract .detailAbstractContent {
    line-height: 2;
    margin: 30rpx 0;
    color: #ffffffd5;
    overflow: hidden;
    height: 110rpx;
}

.detailAbstract .detailAbstractUnfold {
    position: absolute;
    top: 154rpx;
    right: 17rpx;
    font-size: 32rpx;
    padding: 0 40rpx 0 10rpx;
}

.detailStar {
    padding: 0 30rpx;
}

.detailStar .detailStarScroll {
    display: flex;
}

.detailStar .detailStarContent {
    width: 160rpx;
    text-align: center;
    color: #fff;
    font-size: 26rpx;
    margin: 0 10rpx;

    flex-basis: 0;
}

.detailStar .detailStarContent:first-child {
    margin-left: 0;
}

.detailStar .detailStarContent:last-child {
    margin-right: 0;
}

.detailStar .detailStarContent .detailStarImg {
    width: 160rpx;
    height: 230rpx;
    border-radius: 14rpx;
    overflow: hidden;
    margin-top: 20rpx;
}

.detailStar .detailStarContent .detailStarImg image {
    width: 100%;
    height: 100%;
}

.detailStar .detailStarContent .detailStarName {
    margin: 30rpx 0 8rpx;
}

.detailStar .detailStarContent .detailStarPosition {
    color: #ffffff5b;
}

.video {
    width: 100%;
    margin: 22rpx 0;
}

.buyBtnWrap {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
}

.buyBtnWrap .buyBtn {
    width: 90%;
    background: linear-gradient(to right,#fc383b,#ff4f64);
    line-height: 90rpx;
    color: #fff;
    border-radius: 60rpx;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0 0;
}