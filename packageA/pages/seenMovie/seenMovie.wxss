.wantToSeeHead {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #f5f5f5;
    height: 70rpx;
    padding: 0 30rpx;
    color: #999;
    font-size: 28rpx;
}

.wantToSeeHead .wantToSeeHeadEditBtn {
    border-radius: 70rpx;
    background-color: #fff;
    padding: 10rpx 22rpx;
    color: #666666;
    font-size: 26rpx;
}

.wantToSeeCard .wantToSeeFooter {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    height: 100rpx;
    box-shadow: 0 -3rpx 18rpx 0rpx #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    color: #333;
    background-color: #fff;
    box-sizing: border-box;
}

.van-button--normal {
    font-size: var(--button-normal-font-size, 24rpx) !important;
    padding: 0 20rpx;
}

.van-button {
    height: var(--button-default-height, 54rpx) !important;
}