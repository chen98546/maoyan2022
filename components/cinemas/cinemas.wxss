.cinemasItem {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 20rpx 40rpx 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-bottom: 2rpx solid #e6e6e6;
}

.cinemasItem .cinemasLeft {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 0.95;
    font-size: 22rpx;
    color: #999;

}

.cinemasItem .cinemasLeft .cinemasTitle {
    font-size: 34rpx;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.cinemasItem .cinemasLeft .cinemasAddress {
    font-size: 24rpx;
    color: #666;
    margin: 16rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.cinemasItem .cinemasLeft .cinemasMovie {
    margin: 10rpx 0;
}


.cinemasItem .cinemasRight {
    justify-items: start;
    align-self: end;
    color: #999;
    font-size: 24rpx;
}

.cinemasItem .cinemasRight .cinemasSmall {
    display: flex;
    flex-direction: column;
}

.cinemasItem .cinemasRight .cinemasSmall .cinemasPrice {
    color: #ef4238;
    font-size: 36rpx;
}

.cinemasItem .cinemasRight .cinemasSmall .cinemasYen {
    color: #ef4238;
}

.cinemasItem .cinemasRight .cinemasSmall .distance {
    margin-top: 10rpx;
    align-self: flex-end;
}


.huiTag,
.cardTag {
    display: inline-block;
    padding: 2rpx 4rpx;
    color: #fff;
    background-color: #ff9900;
    border-radius: 6rpx;
    font-size: 20rpx;
}

.cardTag {
    background-color: #a97be0;
}

.tag1,.tag2 {
    display: inline-block;
    border: 2rpx solid #6cbd03;
    color: #6cbd03;
    padding: 0 4rpx;
    margin-right: 6rpx;
}

.tag2 {
    border: 2rpx solid #ff9900;
    color: #ff9900;
}