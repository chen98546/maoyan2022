.van-tab {
    flex: none;
}

.van-tabs__scroll {
    width: 80%;
    padding: 0 30rpx;
}

.van-ellipsis {
    font-size: 26rpx;
    margin: 0 6rpx;
}

.van-tabs__line {
    margin: 0 6rpx;
}

.van-tabs__track {
    margin-top: 30rpx;
}


.eSports {
    padding: 30rpx;
}

.eSports .eSportsTitle {
    width: 160rpx;
    height: 30rpx;
    margin-bottom: 20rpx;
}

.eSports .eSportsBox {
    width: 100%;
    display: flex;
    align-items: flex-start;
}

.eSports .eSportsBox .img {
    flex: 1;
    height: 400rpx;
    margin-right: 4rpx;
}

.eSports .eSportsBox .eSportsImg {
    position: relative;
    flex: 1;
    height: 400rpx;
}

.eSports .eSportsBox .eSportsImg .img2 {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 49%;
}

.eSports .eSportsBox .eSportsImg .img3 {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 49.8%;
}

.hotSports {
    margin-bottom: 10rpx;
}


.hotSports .hotSportsTitle {
    padding: 0 30rpx;
    font-size: 32rpx;
}

.hotSports .navRight {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    font-weight: 300;
    padding: 4rpx 14rpx;
    height: 50%;
    background-color: #f5f5f5;
    border-radius: 50rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.hotSports .tournament {
    width: 100%;
    text-align: center;
    margin: 50rpx 0;

}

.hotSports .nothing {
    width: 180rpx;
    height: 200rpx;
}

.hotSports .empty {
    color: #cccccc;
    margin-top: 20rpx;
}

.hotSports .item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 70rpx;
    padding: 0 30rpx;
}

.hotSports .item .pic {
    width: 250rpx;
    height: 270rpx;
    margin-right: 20rpx;
    flex: 1.1;
    border-radius: 16rpx;
    box-shadow: 0 6rpx 10rpx 0 #d4d4d4;
}

.hotSports .item .text {
    position: relative;
    flex: 2.6;
}

.hotSports .item .text .title {
    font-size: 32rpx;
    font-weight: 700;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.hotSports .item .text .date {
    font-size: 24rpx;
    color: #888;
    margin: 16rpx 0 8rpx;
}

.hotSports .item .text .address {
    width: 88%;
    font-size: 24rpx;
    color: #888;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.hotSports .item .text .price {
    position: absolute;
    bottom: 0;
    font-size: 22rpx;
    font-weight: 400;
}

.hotSports .item .text .price .ticket {
    display: inline-block;
    padding: 2rpx 6rpx;
    background-color: #fff2f0;
    color: #ff6a48;
    font-size: 20rpx;
}

.noEvent {
    background-color: #f5f5f5;
    color: #999;
    font-size: 24rpx;
    text-align: center;
    width: 100%;
    line-height: 90rpx;
}