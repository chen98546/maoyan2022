}



.van-tabs {
    margin-top: 120rpx;
    color: #333;
}

.van-ellipsis {
    font-size: 34rpx;
}

.van-tabs__line {
    height: var(--tabs-bottom-bar-height, 0) !important;
}

.van-tabs__content {
    margin-top: 190rpx;
    margin-bottom: 163rpx;
}

.van-dropdown-menu {
    border-top: 2rpx solid #e6e6e6;
    border-bottom: 2rpx solid #e6e6e6;
}

.van-dropdown-menu__item::after {
    content: "";
    border-right: 2rpx solid #e6e6e6;
    height: 50%;
    width: 33%;
}

.van-dropdown-menu__item:nth-child(1) {
    margin-left: 40rpx;
}

.van-dropdown-menu__item:nth-child(3)::after {
    content: "";
    border-right: none;
}

.van-dropdown-item__title {
    font-size: 28rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #e5e5e5;
    text-indent: 20rpx;
}

.van-cell.van-cell--clickable {
    padding: 0 !important;
}

.van-dropdown-menu__title .van-ellipsis {
    font-size: 28rpx;
    font-weight: 200;
}

